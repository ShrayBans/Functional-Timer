{
   "name": "Functional Pomodoro Timer",
   "description": "25 Minute Timer that closes distracting web pages when timer is up.",
   "version": "1.0",
   "manifest_version": 2,

   "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "js": [
         "lib/jquery-3.1.1.min.js",
         "app/extension.js"
       ]
     }
   ],

   "background": {
     "persistent": true,
     "scripts": [
       "lib/howler.min.js",
       "app/background/background.js",
       "app/background/timer.js"
     ]
   },

   "browser_action": {
      "default_icon": "assets/icon.png",
      "default_title": "Functional Pomodoro Timer",
      "default_popup":"app/popup.html"
      },

     "permissions": [ "tabs", "storage", "webRequest", "notifications", "background", "webRequestBlocking" ]

}
